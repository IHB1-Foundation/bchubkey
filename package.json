{
  "name": "bchubkey",
  "version": "0.1.0",
  "description": "CashTokens-Gated Telegram Group Automation Bot",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "npm run start:railway",
    "start:app": "node dist/index.js",
    "start:railway": "npm run db:generate && prisma migrate deploy && node dist/index.js",
    "build": "npm run db:generate && tsc",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "db:generate": "prisma generate",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "demo": "tsx scripts/demo.ts",
    "demo:reset": "tsx scripts/demo-reset.ts",
    "test:security": "tsx tests/auth-security.test.ts",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:e2e:live": "playwright test tests/e2e/live-deploy.spec.ts",
    "test:e2e:mock": "playwright test tests/e2e/mock-coverage.spec.ts",
    "test:e2e:ui": "playwright test tests/e2e/ui-quality.spec.ts",
    "test:e2e:contracts": "playwright test tests/e2e/live-api-contract.spec.ts tests/e2e/live-observability.spec.ts",
    "test:e2e:live:all": "playwright test tests/e2e/live-*.spec.ts tests/e2e/ui-quality.spec.ts",
    "test:e2e:matrix": "PW_FULL_MATRIX=1 playwright test",
    "test:e2e:ci": "npm run test:e2e:mock && npm run test:e2e:live:all"
  },
  "dependencies": {
    "@bitauth/libauth": "^3.0.0",
    "@prisma/client": "^6.19.2",
    "@types/qrcode": "^1.5.6",
    "dotenv": "^16.4.5",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "prisma": "^6.19.2",
    "qrcode": "^1.5.4",
    "telegraf": "^4.16.3",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.58.2",
    "@types/node": "^20.11.0",
    "@types/ws": "^8.18.1",
    "eslint": "^9.0.0",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0"
  },
  "keywords": [
    "telegram",
    "bot",
    "cashtokens",
    "bch",
    "token-gating"
  ],
  "license": "MIT"
}
